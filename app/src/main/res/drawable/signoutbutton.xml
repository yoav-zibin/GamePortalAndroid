<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners
                android:topLeftRadius="30dip"
                android:bottomRightRadius="30dip"
                />
            <stroke android:width="1dip" android:color="#5e7974" />
            <gradient android:angle="315" android:startColor="#7aa0c2" android:endColor="#58857e" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners
                android:topLeftRadius="30dip"
                android:bottomRightRadius="30dip"
                />
            <stroke android:width="1dip" android:color="#5e7974" />
            <solid android:color="#7aa0c2"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners
                android:topLeftRadius="30dip"
                android:bottomRightRadius="30dip"
                />
            <stroke android:width="1dip" android:color="#5e7974" />
            <gradient android:angle="315" android:startColor="#99ddff" android:endColor="#7aa0c2" />
        </shape>
    </item>
</selector>