<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners
                android:topLeftRadius="30dip"
                android:topRightRadius="30dip"/>
            <gradient android:angle="-90" android:startColor="#FF5733" android:endColor="#cc0000"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners
                android:topLeftRadius="30dip"
                android:topRightRadius="30dip"/>
            <solid android:color="#FF0000"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners
                android:topLeftRadius="30dip"
                android:topRightRadius="30dip"/>
            <gradient android:angle="90" android:startColor="#ff8566" android:endColor="#FF5733" />
        </shape>
    </item>
</selector>