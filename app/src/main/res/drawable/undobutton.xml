<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp"/>
            <gradient android:angle="315" android:startColor="#ac00e6" android:endColor="#8600b3" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp"/>
            <solid android:color="#e699ff"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp"/>
            <gradient android:angle="315" android:startColor="#e699ff" android:endColor="#ac00e6" />
        </shape>
    </item>
</selector>