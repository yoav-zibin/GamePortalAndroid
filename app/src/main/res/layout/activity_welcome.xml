<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nyuchess.gameportal.WelcomeActivity">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="SIGN OUT"
        android:layout_below="@id/welcome"/>

    <!--<Button-->
    <!--android:id="@+id/view_online_users"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@+id/sign_out"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:text="View Online Users"-->
    <!--android:onClick="viewOnlineUsers"/>-->

    <TextView
        android:id ="@+id/users_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Users online:"
        android:layout_below="@id/sign_out"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/group_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/users_online"
        android:layout_marginTop="38dp"
        android:layout_toLeftOf="@+id/sign_out"
        android:layout_toStartOf="@+id/sign_out"
        android:text="Groups" />

    <Button
        android:id="@+id/people_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/group_button"
        android:layout_toEndOf="@+id/sign_out"
        android:layout_toRightOf="@+id/sign_out"
        android:text="Users" />


</RelativeLayout>
